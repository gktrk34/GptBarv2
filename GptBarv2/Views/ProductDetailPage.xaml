<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GptBarv2.Views.ProductDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GptBarv2.Views"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:models="clr-namespace:GptBarv2.Models"
    x:Name="ProductDetailPageRoot"
    x:DataType="local:ProductDetailPage"
    Title="Ürün Detayı">

    <Grid RowDefinitions="Auto,*">
        <Image Grid.Row="0"
           x:Name="HeroImage"
           Source="bar_hero.jpg"
           Aspect="AspectFit"
           HeightRequest="200" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="10">
                <Label x:Name="ProductNameLabel"
               Text="Ürün Detayı"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center" />

                <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="Fill" />

                <Label x:Name="ProductDescriptionLabel"
               Text="Ürün hakkında basit açıklama buraya gelecek."
               FontSize="16"
               TextColor="Gray"
               HorizontalOptions="Center" />

                <Label x:Name="ProductPriceLabel"
               Text=""
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

                <!-- Rating Bölümü -->
                <HorizontalStackLayout
            x:Name="RatingContainer"
            Spacing="2"
            HorizontalOptions="Center">
                    <Image Source="emptystar.png" HeightRequest="32" WidthRequest="32">
                        <Image.GestureRecognizers>
                            <!-- CommandParameter artık string değil, direkt "1" değeri -->
                            <TapGestureRecognizer Tapped="OnStarTapped" CommandParameter="1" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="emptystar.png" HeightRequest="32" WidthRequest="32">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStarTapped" CommandParameter="2" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="emptystar.png" HeightRequest="32" WidthRequest="32">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStarTapped" CommandParameter="3" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="emptystar.png" HeightRequest="32" WidthRequest="32">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStarTapped" CommandParameter="4" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="emptystar.png" HeightRequest="32" WidthRequest="32">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStarTapped" CommandParameter="5" />
                        </Image.GestureRecognizers>
                    </Image>
                </HorizontalStackLayout>

                <!-- Butonlar -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="Favorilere Ekle" Clicked="OnFavoriteClicked" />
                    <Button Text="Barıma Ekle" Clicked="OnAddToBarClicked" />
                </HorizontalStackLayout>

                <!-- Expander: Tadım Notları -->
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Label Text="Tadım Notları" FontAttributes="Bold" FontSize="18" TextColor="DarkBlue" />
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <Label x:Name="TastingNotesLabel" Text="" FontSize="16" TextColor="Black" />
                    </toolkit:Expander.Content>
                </toolkit:Expander>

                <!-- Expander: Ek Bilgiler -->
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Label Text="Ek Bilgiler" FontAttributes="Bold" FontSize="18" TextColor="DarkBlue" />
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <Label x:Name="AdditionalInfoLabel" Text="" FontSize="16" TextColor="Black" />
                    </toolkit:Expander.Content>
                </toolkit:Expander>

                <!-- Benzer Ürünler Başlık -->
                <Label Text="Benzer Ürünler" FontAttributes="Bold" FontSize="18" TextColor="DarkBlue" Margin="0,20,0,10" />

                <!-- Benzer Ürünler Listesi -->
                <CollectionView
            x:Name="SimilarProductsCollectionView"
            ItemsSource="{Binding SimilarProducts}"
            SelectionMode="None"
            HeightRequest="200">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:ProductModel">
                            <StackLayout Padding="5">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference ProductDetailPageRoot}, Path=SimilarProductTappedCommand}"
                                        CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>
                                <Image Source="{Binding ImageSource}" HeightRequest="100" WidthRequest="100" Aspect="AspectFit" />
                                <Label Text="{Binding Name}" HorizontalOptions="Center" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label x:Name="ProductNotFoundLabel" Text="Ürün Bulunamadı" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" IsVisible="False" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
