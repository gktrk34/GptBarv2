<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GptBarv2.Views.ProductDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Ürün Detayı">

    <Grid RowDefinitions="Auto,*">

        <!-- Hero Image -->
        <Image Grid.Row="0"
               Source="bar_hero.jpg"
               Aspect="AspectFill"
               HeightRequest="200" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="10">

                <Label x:Name="ProductNameLabel"
                       Text="Ürün Detayı"
                       FontAttributes="Bold"
                       FontSize="24"
                       HorizontalOptions="Center" />

                <!-- Örnek: ürün resmi (veya dotnet_bot.png) -->
                <Image x:Name="ProductImage"
                       Source="dotnet_bot.png"
                       HeightRequest="100"
                       Aspect="AspectFit"
                       HorizontalOptions="Center" />

                <Label x:Name="ProductDescriptionLabel"
                       FontSize="16"
                       TextColor="Gray"
                       HorizontalOptions="Center" />

                <!-- Favori / Bar Butonları -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="Favorilere Ekle" 
                            Clicked="OnFavoriteClicked" />
                    <Button Text="Barıma Ekle" 
                            Clicked="OnAddToBarClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
