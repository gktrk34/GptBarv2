<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="GptBarv2.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GptBarv2.Views"
    x:Name="HomePageRoot"
    x:DataType="local:HomePage"
    Title="Anasayfa">
    <Grid RowDefinitions="Auto,*">
        <Image Grid.Row="0" Source="bar_hero.jpg" Aspect="AspectFill" HeightRequest="200" />
        <ScrollView Grid.Row="1">
            <Grid ColumnDefinitions="*,*"
            RowDefinitions="120,120,120,120,120,120"
            RowSpacing="10"
            ColumnSpacing="10"
            Padding="20">
                <!-- Örnek kategori: Gin -->
                <Border Grid.Column="0" Grid.Row="0" Stroke="#8B4513" StrokeThickness="4" Padding="0" StrokeShape="RoundRectangle 10">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:Reference HomePageRoot}, Path=CategoryTappedCommand}"
                                  CommandParameter="{Binding Categories[0]}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="0">
                        <Image Source="gin.png" WidthRequest="60" HeightRequest="60"/>
                        <Label Text="Gin" TextColor="#8B4513" FontAttributes="Bold" FontSize="16" HorizontalTextAlignment="Center" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Border>
                <!-- Diğer kategoriler benzer şekilde eklenecek... -->
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
