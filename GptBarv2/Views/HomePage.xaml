<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="GptBarv2.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Anasayfa">

    <Grid RowDefinitions="Auto,*">

        <!-- Hero Image -->
        <Image Grid.Row="0"
               Source="bar_hero.jpg"
               Aspect="AspectFill"
               HeightRequest="200" />

        <!-- Kategori Listesi -->
        <ScrollView Grid.Row="1">
            <CollectionView x:Name="CategoryCollection"
                            SelectionMode="None"
                            Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Kategori KartÄ± -->
                        <Frame CornerRadius="10"
                               Padding="20"
                               Margin="0,5"
                               BackgroundColor="#8B4513">
                            <Frame.GestureRecognizers>
                                <!-- TapGestureRecognizer -->
                                <TapGestureRecognizer Command="{Binding Source={x:Reference CategoryCollection}, Path=BindingContext.CategoryTappedCommand}"
                                                      CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>
                            <Label Text="{Binding Name}"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>
