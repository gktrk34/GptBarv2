<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GptBarv2.Views.CategoryDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Kategori Detayı">

    <Grid RowDefinitions="Auto,*">

        <!-- Hero Image -->
        <Image Grid.Row="0"
               Source="bar_hero.jpg"
               Aspect="AspectFill"
               HeightRequest="200" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="10">

                <Label x:Name="CategoryNameLabel"
                       Text="Kategori Detayı"
                       FontAttributes="Bold"
                       FontSize="24"
                       HorizontalOptions="Center" />

                <!-- Markalar Listesi -->
                <CollectionView x:Name="BrandsCollection"
                                SelectionMode="None"
                                Margin="0,10,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10"
                                   Padding="20"
                                   Margin="0,5"
                                   BackgroundColor="#A0522D">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference BrandsCollection}, Path=BindingContext.BrandTappedCommand}"
                                                          CommandParameter="{Binding}" />
                                </Frame.GestureRecognizers>
                                <Label Text="{Binding Name}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
