<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GptBarv2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GptBarv2.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="GptBarv2">

    <ShellContent
        Title="Anasayfa"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage" />

    <ShellContent
        Title="Kategori Detay"
        ContentTemplate="{DataTemplate local:CategoryDetailPage}"
        Route="CategoryDetailPage" />

    <ShellContent
        Title="Marka Detay"
        ContentTemplate="{DataTemplate local:BrandDetailPage}"
        Route="BrandDetailPage" />

    <ShellContent
        Title="Ürün Detay"
        ContentTemplate="{DataTemplate local:ProductDetailPage}"
        Route="ProductDetailPage" />

</Shell>